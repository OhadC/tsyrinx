{
    "name": "tsyrinx",
    "version": "1.0.2",
    "description": "A lightweight, explicit DI container for JavaScript/TypeScript â€” no reflect-metadata, no decorators.",
    "type": "commonjs",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "rimraf ./dist",
        "test": "yarn lint && jest --config test/jest.config.js",
        "test:inspect": "yarn lint && node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --config test/jest.config.js",
        "test:coverage": "jest --config test/jest.config.js --coverage",
        "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" \"./src\"",
        "lint:fix": "eslint --fix --ext \".js,.jsx,.ts,.tsx\" \"./src\"",
        "format": "prettier --write **/*.{ts,tsx,scss,json}",
        "publish": "npm publish --access public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/OhadC/tsyrinx.git"
    },
    "keywords": [
        "dependency injection",
        "dependency",
        "injection",
        "ioc",
        "container",
        "javascript",
        "typescript"
    ],
    "engines": {
        "node": ">= 6.0.0"
    },
    "author": "Steven Hobson-Campbell",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/OhadC/tsyrinx/issues"
    },
    "homepage": "https://github.com/OhadC/tsyrinx#readme",
    "sideEffects": false,
    "dependencies": {
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "prettier": "3.6.2",
        "rimraf": "^6.1.0",
        "ts-jest": "^29.4.5",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3"
    }
}
